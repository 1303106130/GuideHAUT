.combine-alert {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.55);
  display: flex;
  justify-content: center;
  z-index: 100;
}

.alert-container {
  opacity: 1;
  width: 600rpx;
  position: relative;
  margin-top: 200rpx;
}

.alert-container .close {
  position: absolute;
  width: 50rpx !important;
  height: 50rpx !important;
  right: 20rpx;
  top: 25rpx;
}

.alert-container .big {
  width: 100%;
  border-radius: 35rpx;
  background-color: white;
  padding: 16rpx 0 48rpx;
}

.big .icon-container {
  display: flex;
  justify-content: center;
}

.icon-container image {
  width: 128rpx;
  height: 128rpx;
}

.big .title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 0 46rpx;
}

.big .content {
  font-size: 30rpx;
  text-align: center;
  margin: 0 46rpx;
}

.big .btn {
  background-color: #22307c;
  color: white;
  font-size: 30rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 48rpx;
  margin: 48rpx 38rpx 0;
}

.big .sub-content {
  color: #848484;
  font-size: 28rpx;
  margin: 0 46rpx;
}

.num {
  font-size: 32rpx;
