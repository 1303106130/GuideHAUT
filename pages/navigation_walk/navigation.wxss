.flex-style {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.flex-item {
    height: 35px;
    line-height: 35px;
    text-align: center;
    -webkit-box-flex: 1;
    flex: 1;
}

.flex-item.active {
    color: #22307c;
}

.map_box {
  position:absolute;
  top: 0px;
  bottom: 130px;
  left: 0px;
  right: 0px;
}

#navi_map {
    width: 100%;
    height: 100%;
}

.text_box{
  position:absolute;
  height: 130px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}
.text_box .text{
  margin: 15px;
}
.weather{
  position:absolute;
  bottom: 25px;
  right: 10px;
  padding: 3px 5px;
  color: #22307c(206, 197, 197);
  background: linear-gradient(to bottom,rgba(221, 50, 20, 0.651) 1%,rgba(243, 194, 58, 0.8) 25%,rgba(103, 213, 241, 0.5) 75%,rgba(30, 166, 245, 0.678) 100%);
  width:50px;
  text-align:center;
  border-radius:5px;
}
.guide{
  position:absolute;
  bottom: 75px;
  right: 10px;
  padding: 3px 5px;
  color: #22307c(161, 238, 110);
  background: linear-gradient(to bottom,rgba(60, 223, 54, 0.6) 1%,rgba(133, 253, 117, 0.521) 25%,rgba(143, 109, 238, 0.4) 75%,rgba(142, 104, 248, 0.6) 100%);
  width:50px;
  text-align:center;
  border-radius:5px;
}