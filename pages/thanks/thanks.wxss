.container {
  width: 100%;
  height: 100%;
  position: absolute;
}

.user {
  height: 360rpx;
  width: 600rpx;
  position: absolute;
  top: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  border-radius: 15rpx;
}

.userinfo-avatar {
  width: 158rpx;
  height: 158rpx;
  position: absolute;
  margin: 60rpx 225rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 100%;
  color: #22307c;
  text-align: center;
  margin-top: 230rpx;
  position: absolute;
}

.about {
  width: 100%;
  position: absolute;
  margin-top: 460rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  padding-right: 20rpx;
}

.open {
  float: right;
  margin-right: 80rpx;
}

.item1 {
  color: rgb(112, 112, 112);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 50rpx;
  height: 90rpx;
  background: none;
  font-size: 40rpx;
  margin-top: 6rpx;
}

.item1::after {
  border: none;
}

.image {
  width: 500rpx;
}

.welcome {
  background: linear-gradient(to right, rgba(207, 43, 43, 0.815), orange, rgb(172, 172, 5), green, blue, indigo, violet);
  -webkit-background-clip: text;
  color: transparent;
}
